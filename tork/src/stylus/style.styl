p_one = #423F4F
p_two = #565E75
p_three = #8096A5
p_four = #A5BBBF
p_five = #E2DACF
fonts = "HelveticaNeue-Light", "Helvetica Neue Light", "Helvetica Neue", Helvetica, Arial, "Lucida Grande", sans-serif;

body
	font-family fonts

.chart
	text
		font-size 12px
		font-weight 300
		text-anchor middle
		fill none
	.axis
		path,line
			fill none
			stroke black
			shape-rendering crispEdges
		text
			fill black
			font-size 11px
	.path
		fill none
		stroke p_four
		stroke-width 2
	.dots
		fill p_four
		stroke none
	// .bars
	// 	fill p_four
	// 	&:hover
	// 		fill p_three

#map-canvas
	width 100%
	height 450px

.map-small
	height 120px
	width 150px
	display inline-block
	float right
	border 1px solid p_five

.fields
	height 100%
	padding 10px
	background #EEE
	li
		color p_four

#bottom-content
	margin-top 10px